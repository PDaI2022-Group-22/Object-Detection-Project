<PeopleCountingVideo>:
    on_enter: ()
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 20
        canvas:
            Color:
                rgba: hex('#314A52') #background color
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 2
            size_hint: 1, .1
            Label:
                size_hint: 0.8, 1
                text: "People Counting from Video"
                color: 255/255,255/255,255/255,1
                outline_color: 0/255,0/255,0/255,1
                outline_width: 1
                font_size: 30
            BoxLayout:
                size_hint: 0.2, 1
                Button:
                    text: "Back to Main Menu"
                    on_press:
                        root.manager.current = "main"
                        root.manager.transition.direction = "right"
                        root.on_leave: ()

        Label:
            size_hint: 1, .2
            id: label
            text: "Choose a video file"
        FileChooserListView:
            size_hint: 1, 1
            id: filechooser
            path: "/"
            on_selection: root.file_fire_select(*args)