<PeopleCounting>:
    on_enter: ()
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .1
            Button:
                text: "Back"
                size_hint: .2, 1
                on_press:
                    root.manager.current = "main"
                    root.manager.transition.direction = "right"
                    root.on_leave: ()
            Label:
                text: "Choose an image file"
                size_hint: 2, .1
        Image:
            id: image
            size_hint: .7, 2
            # x, center_x, right for horizontal
            # y, center_y, top for vertical
            pos_hint: {"x": .15}
        Label:
            size_hint: 1, .2
            id: label
            text: ""
            color: 1,1,1,1
        FileChooserListView:
            size_hint: 1, 1
            id: filechooser
            path: "/"
            on_selection: root.file_fire_select(*args)